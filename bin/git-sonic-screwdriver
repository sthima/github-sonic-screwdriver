#!/usr/bin/env node

const path = require('path');
const yargs = require('yargs');

const commandDir = path.join(__dirname, '..', 'components');
const epilogue = require(path.join(commandDir, 'epilogue'));

yargs
  .commandDir(commandDir, {
    exclude: /epilogue/
  })
  .command('help', false, () => {}, (yargs) => { yargs.showHelp(); })
  .demandCommand(1)
  .epilogue(epilogue)
  .help('help')
  .argv;
